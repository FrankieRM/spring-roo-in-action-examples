<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
    <coffeescript>
        <plugins>
            <plugin>
                <groupId>com.theoryinpractise</groupId>
                <artifactId>coffee-maven-plugin</artifactId>
                <version>1.1.3</version>
                <executions>
                <execution>
                  <id>compile-coffeescript</id>
                  <phase>compile</phase>
                  <goals>
                    <goal>coffee</goal>
                  </goals>
                </execution>
              </executions>
                <configuration>
			        <coffeeDir>src/main/webapp/scripts</coffeeDir>
                  <outputDirectory>src/main/webapp/scripts</outputDirectory>
		        </configuration>
            </plugin>
        </plugins>
    </coffeescript>
